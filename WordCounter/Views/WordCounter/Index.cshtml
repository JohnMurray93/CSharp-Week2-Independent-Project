@{
  Layout = "_Layout";
}
<h1 class="white-header">Next Generation Word Counter</h1>
<form action="/count" method="post">
  <div class="form-group">
    <h3 class="red-header">Enter a word</h3>
    <input name="searchWord" class="form-control" type="text">  
    <label for="searchWord">Word to search for:</label>
  </div>
  <div class="form-group">
    <h3 class="red-header">Enter a sentence</h3>
    <input name="sentence" class="form-control" type="text">
    <label for="sentence">Sentence to search:</label>
  </div>
<br>
  <button type="submit" class="btn">Submit</button>
</form>